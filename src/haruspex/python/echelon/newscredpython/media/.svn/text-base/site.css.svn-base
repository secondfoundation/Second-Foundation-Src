/*                                                 GENERAL
---------------------------------------------------------- */

* {
	margin: 0;
	padding: 0;
	font-weight: normal;
	list-style: none;
}

.clear {
	clear: both;
}

body {
	width: 800px;
	margin: 0 auto;
	margin-bottom: 50px;
	line-height: 1.5;
}

a {
	text-decoration: none;
}

a:hover {
	text-decoration: underline;
}


/*                                                 HEADER
---------------------------------------------------------- */

div#header {
	padding: 30px 0 5px 0;
}

/*                                                 CONTENT
---------------------------------------------------------- */


h1 {
	margin: 35px 0 15px 0;
}

h1.topic {
	margin: 22px 0 3px 0;
	line-height: 1;
}

h1.article {
	margin: 0 0 10px 0;
	line-height: 1;
	color: orange;
}

h1.related {
	margin: 25px 0 0 0;
	font-size: 26px;
}

span.type {
	font: 14px arial;
	color: #aaa;
}

div#content h2 {
	margin-bottom: 5px;
	padding-bottom: 3px;
	border-bottom: 1px solid #ddd;
	color: orange;
}

table {
	margin-bottom: 20px;
}

table td.first {
	width: 550px;
}

table a {
	color: #000;
}

div#content li {
	border-top: 1px solid #ddd;
	padding: 10px 0;
}

div#content span {
	font-family: 12px arial;
	color: #aaa;
}

div#content h2 {
	border-bottom: none;
	padding-bottom: 0px;		
	line-height: 1.1;
	color: orange;	
}

div#content p {
	margin: 6px 0 10px 0;	
}

img.topic {
	margin: 0 15px 10px 0;
	border-top: 1px solid #eee;
	border-right: 1px solid #ddd;
	border-bottom: 1px solid #aaa;
	border-left: 1px solid #ddd;
	padding: 6px;		
	float: left;
}

div#content {
	float: left;
	border-right: 1px solid #ddd;	
	padding-right: 2%;
	width: 66%;
	min-height: 800px;
}

/*                                                SIDEBAR
---------------------------------------------------------- */

div#sidebar {
	float: right;
	padding-left: 1%;
	width: 30%;
}


div#sidebar h2 {
	margin: 20px 0 0 0;
	border-bottom: 1px solid #ddd;
	padding: 0;
	font-size: 24px;	
	color: black;
}

div#sidebar h2.first {
	margin-top: 0;
}

div#sidebar p {
	margin-bottom: 15px;
	padding-top: 8px;
	font-size: 13.5px;
}

div#sidebar ul {
}

div#sidebar ul li {
	border-bottom: 1px solid #ddd;
}

div#sidebar ul img {
	float: left;
	margin: 6px 10px 6px 0;
	height: 45px;
	width: 45px;
}

div#sidebar ul h3 {
	line-height: 3.2;
	font-size: 18px;
	color: orange;
}

div#slideshow {
  position: relative;
	margin: 10px 0 15px 0;
	height: 340px;
}

div#slideshow img {
    display: none;
	position: absolute;
    top: 0;
    left: 0;
    z-index: 8;
}

div#slideshow img.active {
    z-index: 10;
}

div#slideshow img.last-active {
    z-index: 9;
}

div#video-sidebar {
	float: right;
	padding-left: 1%;
	width: 30%;
}

div#video-sidebar p {
	margin-bottom: 15px;
	padding-top: 8px;
	font-size: 13.5px;
}

div#video-sidebar h2 {
	margin: 20px 0 0 0;
	border-bottom: 1px solid #ddd;
	padding: 0;
	font-size: 24px;	
	color: black;
}
div#video-sidebar ul li {
	border-bottom: 0px;
}

div#video-sidebar ul img {
	float: left;
	margin: 6px 10px 6px 0;
	height: 90px;
	width: 120px;
}

div#twitter-sidebar {
	float: right;
	padding-left: 1%;
	width: 30%;
}
div#twitter-sidebar h2 {
	margin: 20px 0 0 0;
	border-bottom: 1px solid #ddd;
	padding: 0;
	font-size: 24px;	
	color: black;
}
div#twitter-sidebar ul li {
	border-bottom: 0px;
}

#twitter-buzz li {
font-size: 11px;
color: #3a3a3a;
margin: 0 0 10px 0;
line-height: 1.3;
}

#twitter-buzz li img { 
vertical-align: middle;
padding: 0 5px 3px 0;
display: block;
float: left;
}

#twitter-buzz li .name{
color: #ff6600;
padding: 0 5px 0 0;
font-weight: bold;
}
/*                                                 FOOTER
---------------------------------------------------------- */

div#footer {
	clear: both;
}
