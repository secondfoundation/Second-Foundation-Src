<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">

<html lang="en">
<head>
	<title>Sample Topic Page | NewsCred Platform</title>
	<link rel="stylesheet" type="text/css" href="media/site.css" />
</head>
<body>
	<div id="header"></div>
	<div id="content">
		<img class="topic" src={{ topic.image_url }} />
		<h1 class="topic">{{ topic.name }}</h1>
		<span class="type">{{ topic.subclassification|upper}}</span>
		<div class="clear"></div>		
		<ul>
			{% for article in related_articles %}
			<li>
				<span><a href="{{article.source_website}}">{{ article.source}}</a></span>
				<h2>{{article.title}}</h2>
				<p>{{article.description|truncatewords:75|striptags}}</p>
				<a href="{{ article.link }}" target="_blank">Read Full Story</a>
			</li>
			{%endfor%}
		</ul>
	</div>
	<div id="sidebar">
		<h2 class="first">About</h2>
		<p>{{ topic.description|truncatewords:75|striptags}} <a href="{{topic.link}}" target="_blank">read more</a></p>
		<h2>Related Topics</h2>
		<ul>
			{% for topic in related_topics %}
			<li>
				<img src={{ topic.image_url }} />
				<h3>{{ topic.name }}</h3>
				<div class="clear"></div>
			</li>
			{% endfor %}
		</ul>
		<h2>Related Photos</h2>
		<div id="slideshow">
			{% for image in related_images%}
			<img src="{{image.image_large}}?width=240&height=180"/>
			{%endfor%}
		</div>			
	</div>
	<div id="video-sidebar">		
		<div id="related-videos">
			<h2>Related Videos</h2>
			{% if related_videos %}
			<ul>
			  {% for video in related_videos %}
				<li>
					<img src="{{video.thumbnail}}" alt="Related Video Sample" class="video_thumbnail" style="cursor:pointer;" 
					title='Source: {{video.source_name}} | Date: {{video.published_at|date:"j F Y"}}'/>
					<p><a href="javascript:void(0);" class="video_title">{{video.title}}</a></p>
					<span class="video_embed_code" style="display:none;">{{video.embed_code}}</span>
					<br class="clear" />
				</li>
				{% endfor %}
			</ul>
			{% else %}
				No videos found.
			{% endif %}
		</div>		
	</div>
	<div id="twitter-sidebar">
		<div id="twitter-buzz">
			<h2>Twitter Buzz</h2>
			<br/>
			{% if related_tweets %}
			<ul>
				{% for tweet in related_tweets%}
				  <li>
				    <img src="{{tweet.thumbnail}}" width="20" height="20" alt="Scott Msn Mini" />
				      <a class="name" href="{{tweet.author_link}}">{{tweet.author_name}}</a> {{tweet.title}}
				    </li>
				{% endfor %}
			</ul>
			{% else %}
				No Twitter conversation found.
			{% endif %}
		</div>
	</div>
	<div id="footer"></div>
	<script type="text/javascript" src="media/jquery.min.js"></script>
	<script type="text/javascript" src="media/site.js"></script>
</body>
</html>